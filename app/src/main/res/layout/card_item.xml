<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:background="@drawable/main_item_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:text="@string/app_name"
                android:textColor="@color/secondary_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:text="Rs.1200"
                android:textColor="@color/secondary_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/main_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_title"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/main_price"
                android:text="50% Offer"
                android:textColor="#F44336"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/main_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_price"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                android:text="Rs.1200"
                android:textColor="@color/secondary_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>